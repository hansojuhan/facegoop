<%= form_with model: comment, url: post_comments_path(post) do |form| %>

  <div class="flex flex-col gap-4">
    <h3>Add a comment</h3>
    <%= form.text_area :content, placeholder: 'Add comment...', cols: 45, rows: 2, maxlength: 65525, required: true %>
    <%= form.submit 'Post comment', class:'btn-primary' %>
  </div>

<% end %>
