<div class="grid grid-cols-[12rem,4rem,8fr] grid-rows-[12rem,3fr] w-full px-16 gap-2">

  <%# Profile %>
  <div class="col-start-1 row-start-1 col-span-2">
    <div class="bg-gray-200 rounded py-4 flex justify-center items-center h-full">
      <%= image_tag(@user.avatar_url, class: 'h-full rounded-full') unless @user.avatar_url.nil? %>
    </div>
  </div>

  <%# Name header %>
  <div class="col-start-3 row-start-1 bg-gray-200 rounded">
    <div class="pb-4 pl-4 text-4xl h-full flex items-end">
      <%= @user.full_name %>
    </div>
  </div>

  <%# Bio section %>
  <div class="col-start-1 col-span-2 row-start-2">
    <div class="flex flex-col items-start h-full py-4 pl-4 bg-gray-200 rounded">
      <h2 class="text-2xl">Bio</h2>
      <p>Aasdfasdf</p>
    </div>
  </div>

  <%# Posts section %>
  <div class="col-start-3 row-start-2">
    <div class="flex flex-col items-start h-full ">
      <h2 class="py-4 pl-4 text-2xl bg-gray-200 rounded w-full">Posts</h2>
    </div>
  </div>

</div>
